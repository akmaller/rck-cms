# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/roemahcita_cms?schema=public"
# Limit active Prisma connections (override per environment when needed)
DATABASE_CONNECTION_LIMIT=5

# -----------------------------------------------------------------------------
# Application URLs
# -----------------------------------------------------------------------------
NEXTAUTH_URL="http://localhost:3000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
APP_URL="http://localhost:3000"

# A 64+ character secret for NextAuth session encryption.
# Generate with `openssl rand -hex 32` or `npx auth secret`.
NEXTAUTH_SECRET="change_me_to_a_random_hex_string"

# -----------------------------------------------------------------------------
# Anti-bot (Cloudflare Turnstile)
# -----------------------------------------------------------------------------
# Uncomment dan isi untuk mengaktifkan proteksi Turnstile pada formulir publik
# NEXT_PUBLIC_TURNSTILE_SITE_KEY=""
# TURNSTILE_SECRET_KEY=""

# -----------------------------------------------------------------------------
# Content Security Policy tweaks (gunakan hanya jika diperlukan)
# -----------------------------------------------------------------------------
# Atur ke "true"/"1" jika perlu menambahkan 'unsafe-eval' di script-src (meningkatkan risiko XSS)
# CSP_ALLOW_UNSAFE_EVAL="false"

# -----------------------------------------------------------------------------
# Email (SMTP)
# -----------------------------------------------------------------------------
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="username"
SMTP_PASSWORD="password"
SMTP_SECURE=false
SMTP_FROM="Roemah Cita <no-reply@example.com>"

# -----------------------------------------------------------------------------
# Optional seed helper (used by `npm run prisma:seed`)
# -----------------------------------------------------------------------------
# SEED_ADMIN_PASSWORD=""

# -----------------------------------------------------------------------------
# Storage
# -----------------------------------------------------------------------------
# Set to "local" (default) untuk menyimpan file di disk, atau "r2" untuk Cloudflare R2
STORAGE_DRIVER="local"

# Konfigurasi Cloudflare R2 (S3 compatible). Isi jika STORAGE_DRIVER="r2"
# R2_ACCOUNT_ID=""
# R2_BUCKET=""
# R2_ACCESS_KEY_ID=""
# R2_SECRET_ACCESS_KEY=""
# R2_PUBLIC_BASE_URL="https://cdn.example.com"  # Domain publik tempat file diakses
# R2_ENDPOINT="https://<accountid>.r2.cloudflarestorage.com"  # Opsional, override endpoint S3

# -----------------------------------------------------------------------------
# Audit log
# -----------------------------------------------------------------------------
# Set ke "false" untuk mematikan penulisan audit log non-kritis
AUDIT_LOG_ENABLED="true"
# Daftar aksi yang tetap dicatat ketika AUDIT_LOG_ENABLED="false" (pisahkan dengan koma)
AUDIT_LOG_ALWAYS_ACTIONS="USER_LOGIN,USER_LOGOUT"
# Lama retensi dalam hari sebelum dibersihkan oleh job purge
AUDIT_LOG_RETENTION_DAYS=90
